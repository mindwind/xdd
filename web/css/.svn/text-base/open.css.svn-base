a {
	text-decoration: none;
	color: black;
}

a:hover {
	color: #a80505;
	text-decoration: underline;
}

img {
	border: none;
}

.headline {
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 5px;
	font-size: 12px;
	font-weight: bolder;
	font-family: "宋体", "arial";
	color: black;
	text-align: left;
}

.headline2 {
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 5px;
	font-size: 12px;
	font-weight: bolder;
	font-family: "宋体", "arial";
	color: #15428b;
	text-align: center;
}

.clear-left {
	clear: left;
}

.container {
	margin-top: 15px;
	margin-left: auto;
	margin-right: auto;
}

.float-left {
	float: left;
}

.float-right {
	float: right;
}

.open-left-panel {
	width: 20%;
}

.open-left-panel1 {
